{
  "kind": "collectionType",
  "collectionName": "email_templates",
  "info": {
    "name": "Email Template",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },

  "attributes": {
    "from": {
      "type": "email"
    },
    "reply_to": {
      "type": "email"
    },
    "subject": {
      "type": "string"
    },
    "html": {
      "type": "richtext"
    },
    "text": {
      "type": "text"
    },
    "attachments": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "name": {
      "type": "string",
      "required": true
    },
    "api_name": {
      "type": "string",
      "unique": true,
      "required": true,
      "regex": "\\w+"
    }
  }
}
